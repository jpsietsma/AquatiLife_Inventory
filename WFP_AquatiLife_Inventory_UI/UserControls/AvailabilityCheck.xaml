<UserControl x:Class="WFP_AquatiLife_Inventory_UI.UserControls.AvailabilityCheck"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WFP_AquatiLife_Inventory_UI.UserControls"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <telerik:RadWatermarkTextBox x:Name="InputTextbox" WatermarkContent="Enter username" Width="125" Height="30" LostFocus="UsernameInputTextbox_LostFocus" />
            <Image x:Name="AvailabilityStatusImage" MaxHeight="30" Width="30" Margin="5" MouseEnter="ShowTooltip_MouseEnter" MouseLeave="HideToolTip_MouseLeave" />
            <telerik:RadToolTip x:Name="InputToolTip" Visibility="Hidden" Width="150" Height="30" />
        </StackPanel>
    </Grid>
</UserControl>
